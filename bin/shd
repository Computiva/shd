#! /bin/bash

coproc bashproc { bash; }

example() {
	example=`echo $1 | cut -c 3-`
	echo $example >&${bashproc[1]}
}

expected() {
	expected=`echo $1 | cut -c 3-`
	read -t 1 -u ${bashproc[0]} got
	[ "$expected" = "$got" ] && echo -n . || failed "$example" "$expected" "$got"
}

send() {
	send=`echo $1 | cut -c 3-`
	echo $send >&${bashproc[1]}
}

failed() {
	echo -n F
	failure+="\nFailed example:\n"
	failure+="    $1\n"
	failure+="Expected:\n"
	failure+="    $2\n"
	failure+="Got:\n"
	failure+="    $3"
}

while read line
do
	[[ "$line" =~ ^\$\ .* ]] && example "$line"
	[[ "$line" =~ ^\<\ .* ]] && expected "$line"
	[[ "$line" =~ ^\>\ .* ]] && send "$line"
done

echo -e $failure >&2

exit 0
